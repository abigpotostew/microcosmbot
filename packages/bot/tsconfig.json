{
  "extends": "tsconfig/base.json",
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo"
  ],
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "paths": {
      "@microcosms/db": ["../packages/db"]
    }
  }
}
